---
import PageLayout from '@/layouts/page.astro'
import Article from '@/components/Article.astro'
import { articleMapper } from '@/utils'

const { lang, entry } = Astro.props
const { Content } = await entry.render()
const data = articleMapper(entry)
---

<PageLayout
  lang={lang}
  pageName={data.title}
  pageDesc={data.excerpt}
  pageImage={data.abs_feature_image}
>
  <Article {...data}>
    <Content />
  </Article>
</PageLayout>

