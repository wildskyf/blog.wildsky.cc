---
import PageLayout from './page.astro'
import Article from '@/components/Article.astro'
import { articleMapper } from '@/utils'

const { frontmatter } = Astro.props
const data = articleMapper({ data: frontmatter })

const lang = 'tw'
const path_prefix = lang === 'en' ? '/en' : ''

---

<PageLayout
  lang={lang}
  pageName={data.title}
  pageDesc={data.excerpt}
>
  <Article {...data}>
    <slot />
  </Article>
</PageLayout>
